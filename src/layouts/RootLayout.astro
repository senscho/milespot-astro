---
// Props interface
interface Props {
  title?: string;
  description?: string;
  type?: 'blog' | 'wiki' | 'community' | 'home';
}

const { 
  title, 
  description = "Milespot - Your Knowledge Hub", 
  type = 'home' 
} = Astro.props;

import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} | Milespot` : 'Milespot'}</title>
    <meta name="description" content={description} />
  </head>
  <body class="min-h-screen bg-gray-50">
    <div class="flex flex-col min-h-screen">
      <slot name="header" />
      
      <div class="flex-1">
        <div class="container mx-auto px-4 flex gap-6 py-8">
          {type !== 'home' && <slot name="sidebar" />}
          <main class="flex-1">
            <slot />
          </main>
        </div>
      </div>

      <slot name="footer" />
    </div>
  </body>
</html> 